<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/frame"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:fillViewport="true"
            android:background="@android:color/holo_purple">

            <ImageView
                    android:id="@+id/overlay_gradient"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:src="@drawable/black_gradient"/>

            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/detailed_main_content">

                    <include  layout="@layout/card1"
                        android:id="@+id/sub_view"
                        android:layout_weight="6"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"/>
            </LinearLayout>


    <se.chalmers.krogkollen.detailed.FloatingActionButton
        android:id="@+id/fabbutton"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="end"
        android:layout_marginTop="150dp"
        android:layout_marginEnd="18dp"
        android:layout_marginRight="18dp"/>
</FrameLayout>